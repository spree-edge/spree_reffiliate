<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Spree.t(:editing_affiliate, scope: :affiliate_confirmation) %></h3>
    </div>
    <div class="panel-body">
      <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @user } %>

      <%= form_for Spree::User.new, as: @user, url: spree.affiliate_confirmations_path, method: :post do |f| %>
        <div data-hook="admin_user_form_fields" class="row">
          <div data-hook="admin_user_form_password_fields" class="col-md-12">
            <%= f.field_container :password do %>
              <%= f.label :password, Spree.t(:password) %>
              <%= f.password_field :password, class: 'form-control' %>
              <%= f.error_message_on :password %>
            <% end %>
        
            <%= f.field_container :password_confirmation do %>
              <%= f.label :password_confirmation, Spree.t(:confirm_password) %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
              <%= f.error_message_on :password_confirmation %>
            <% end %>
          </div>
        </div>
        <%= hidden_field_tag :activation_token, @affiliate.activation_token %>
        <p>
          <%= f.submit Spree.t(:update), class: 'btn btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
