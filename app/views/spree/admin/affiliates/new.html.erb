<% content_for :page_title do %>
  <%= Spree.t(:new_affiliate) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to admin_affiliates_path, class: 'btn btn-dark' do %>
    <span class="pb-1 icon icon-arrow-left"></span> <%= Spree.t(:back_to_affiliates_list) %>
  <% end %>
<% end %>

<div data-hook="admin_affiliate_new_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @affiliate } %>
</div>

<div data-hook="admin_affiliate_new_form">
  <%= form_for [:admin, @affiliate], url: admin_affiliates_url, method: :post do |f| %>
    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_affiliate_new_form_buttons">
      <%= render partial: 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>
